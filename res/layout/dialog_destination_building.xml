<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <TextView
        android:id="@+id/textView_dest_inst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/dest_bldg_instructions"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_getdirections"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@id/textView_dest_inst"
        android:drawableTop="@drawable/ic_walking"
        android:padding="0dp"
        android:paddingBottom="5dp"
        android:text="Get Directions" />

    <Button
        android:id="@+id/button_viewmap"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@id/textView_dest_inst"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/button_getdirections"
        android:drawableTop="@drawable/ic_find_building_button_unselected"
        android:padding="0dp"
        android:text="View Map" />

</RelativeLayout>