<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <TextView
        android:id="@+id/textView_dialog_title"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="true"
        android:text="@string/sample_building_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView_dest_inst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_dialog_title"
        android:layout_marginTop="5dp"
        android:text="@string/dest_bldg_instructions"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_getdirections"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@id/textView_dest_inst"
        android:drawableTop="@drawable/ic_walking"
        android:padding="0dp"
        android:paddingBottom="5dp"
        android:text="@string/get_directions" />

    <Button
        android:id="@+id/button_viewmap"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@id/textView_dest_inst"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/button_getdirections"
        android:drawableTop="@drawable/ic_view_map"
        android:padding="0dp"
        android:text="@string/view_map" />

</RelativeLayout>