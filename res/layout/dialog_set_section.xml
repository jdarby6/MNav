<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <AutoCompleteTextView
        android:id="@+id/auto_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="@string/section" >

        <requestFocus />
    </AutoCompleteTextView>

    <Button
        android:id="@+id/button_set_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/auto_section"
        android:layout_alignRight="@+id/auto_section"
        android:layout_below="@+id/auto_section"
        android:layout_marginTop="34dp"
        android:text="@string/done" />
    
</RelativeLayout>