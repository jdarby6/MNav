<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_border_enabled"
    android:padding="5dp" >
	<com.eecs.mnav.TouchImageView
	    android:id="@+id/imageView_building_map"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_border_enabled"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_stairsup"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_stairs_up_drawable"
            android:text="@string/_" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@drawable/divider_black_horizontal" />

        <Button
            android:id="@+id/button_stairsdown"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_stairs_down_drawable"
            android:text="@string/_" />

    </LinearLayout>

</RelativeLayout>